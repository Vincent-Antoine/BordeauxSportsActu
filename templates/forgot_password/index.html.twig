{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block body %}
<div class="container max-w-md mx-auto mt-10 bg-white p-6 rounded shadow">
    <h1 class="text-2xl font-bold text-gray-800 mb-6 text-center">Mot de passe oublié</h1>

    {% if successMessage %}
        <div class="bg-green-100 text-green-700 px-4 py-3 rounded mb-4">
            {{ successMessage }}
        </div>
    {% endif %}

    {% if infoMessage %}
        <div class="bg-blue-100 text-blue-700 px-4 py-3 rounded mb-4">
            {{ infoMessage }}
        </div>
    {% endif %}

    {% if errorMessage %}
        <div class="bg-red-100 text-red-700 px-4 py-3 rounded mb-4">
            {{ errorMessage }}
        </div>
    {% endif %}

    {{ form_start(form) }}
        <div class="mb-4">
            {{ form_row(form.email, {'attr': {'class': 'appearance-none border rounded w-full py-2 px-3 text-gray-700'}}) }}
        </div>
        <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
            Envoyer le lien de réinitialisation
        </button>
    {{ form_end(form) }}
</div>
{% endblock %}
