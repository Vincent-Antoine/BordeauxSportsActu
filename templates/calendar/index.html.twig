{% extends 'base.html.twig' %}

{% block title %}Calendrier{% endblock %}

{% block body %}
<div class="max-w-5xl mx-auto py-10 px-4">
    <div class="text-center mb-6">
<h1 class="text-3xl font-medium mb-4">
  {{ calendarTitle }}
</h1>
        <div class="flex justify-center gap-4">
            <a href="{{ path('app_calendar', { month: prevMonth, year: prevYear }) }}"
               class="inline-block px-4 py-2 border border-blue-600 text-blue-600 rounded hover:bg-blue-100 transition">
                ⬅ Mois précédent
            </a>
            <a href="{{ path('app_calendar', { month: nextMonth, year: nextYear }) }}"
               class="inline-block px-4 py-2 border border-blue-600 text-blue-600 rounded hover:bg-blue-100 transition">
                Mois suivant ➡
            </a>
        </div>
    </div>

    <div class="overflow-x-auto bg-white rounded shadow">
        <table class="w-full table-fixed border border-gray-200 text-center">
            <thead class="bg-gray-100">
                <tr>
                    <th class="py-2">Lun</th>
                    <th class="py-2">Mar</th>
                    <th class="py-2">Mer</th>
                    <th class="py-2">Jeu</th>
                    <th class="py-2">Ven</th>
                    <th class="py-2 text-blue-600">Sam</th>
                    <th class="py-2 text-red-600">Dim</th>
                </tr>
            </thead>
            <tbody>
                {% set day = 1 %}
                {% set today = "now"|date("Y-m-d") %}
                {% for i in 0..41 %}
                    {% if i % 7 == 0 %}<tr>{% endif %}

                    {% if i < calendar.startDay - 1 %}
                        <td class="h-20 border border-gray-200 bg-gray-50"></td>
                    {% elseif day <= calendar.daysInMonth %}
                        {% set currentDate = "%04d-%02d-%02d"|format(calendar.year, calendar.month, day) %}
                        <td class="h-20 border border-gray-200 p-0">
                            <a href="{{ path('app_calendar_day', { date: currentDate }) }}"
                               class="flex items-center justify-center w-full h-full text-sm font-medium 
                               {% if currentDate == today %}
                                   bg-green-600 text-white font-bold rounded
                               {% else %}
                                   hover:bg-gray-100 transition rounded
                               {% endif %}">
                                {{ day }}
                            </a>
                        </td>
                        {% set day = day + 1 %}
                    {% else %}
                        <td class="h-20 border border-gray-200 bg-gray-50"></td>
                    {% endif %}

                    {% if i % 7 == 6 %}</tr>{% endif %}
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
