{% extends 'base.html.twig' %}

{% block title %}Détail du {{ date|date('d/m/Y') }}{% endblock %}

{% block body %}
<h1>Événements du {{ date|date('d F Y') }}</h1>

{% if evenements is empty %}
    <p>Aucun événement prévu ce jour-là.</p>
{% else %}
    <ul class="space-y-4">
        {% for e in evenements %}
            <li class="p-4 rounded bg-gray-100">
                <strong>{{ e.equipeDomicile }} vs {{ e.equipeExterieur }}</strong><br>
                📍 {{ e.lieu }}<br>
                🕒 {{ e.date|date('H:i') }}<br>
                🏆 {{ e.competition }}
            </li>
        {% endfor %}
    </ul>
{% endif %}

{% endblock %}
